<div class="contents row">
  <h2>Log in</h2>

  <%= form_tag user_sessions_path, method: :post  do |f| %>

    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email %>
    </div>

    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>

    <div class="actions">
      <%= submit_tag "Log in" %>
    </div>
  <% end %>
</div>
